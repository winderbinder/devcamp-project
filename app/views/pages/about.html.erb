<div id="app-card-container">
  <div class="card">
    <h1 id="about-me-heading">About Me</h1>
    
    <hr>


    <div class="row">
      <div class="col-md-4">
        <%= image_tag "ugandanknuck.jpg", width: 450, alt:"profile pic" %>
        <div class="skills">
          <% @skills.each do |skill| %>
            <h4><%= skill.title %></h4>
            <div class="progress">
                <div 
                  class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent_utilized %>"
                  aria-valuemax="100"                  
                  style="width: <%= skill.percent_utilized %>%;"
                  >
                </div>
              </div>
          <% end %>
        </div>
      </div>


      <div class="col-md-8">
        <p>
          DO YOU KNOW DE WAE?
        </p>

        <p>
          I KNOW DE WAE
        </p>

        <p>
          <button
          class="btn btn-primary"
          type="button"
          data-toggle="collapse"
          data-target="#jobHistory"
          aria-expanded="false"
          aria-controler="jobHistory"
          >
          Job History
        </button>

        <button
          class="btn btn-primary"
          type="button"
          data-toggle="collapse"
          data-target="#jobHistory"
          aria-expanded="false"
          aria-controler="Education"
          >
          Education
        </button>
      </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              job 1
            </div>
            <div>
              job 2
            </div>
          </div>

          <div class="collapse" id="Education">
            <div class="card card-block">
              school 1
            </div>
            <div>
              school 2
            </div>
            <div>
              school 3
            </div>
          </div>
        </p>
     </div>
    </div>
  </div>
</div>

    

